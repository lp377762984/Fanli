<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bussiness_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.business_center_child.child.BusinessDataActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="商家资料"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:background="@color/main_content_bg"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:onClick="goBusinessName"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家名称"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/business_name_go"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <TextView
                    android:id="@+id/business_data_name"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/business_name_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessLogo"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家Logo"/>
                <ImageView
                    android:id="@+id/busi_go_icon_01"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <ImageView
                    android:id="@+id/im_busi_logo_mini"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/busi_go_icon_01"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessPic"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家形象"/>
                <ImageView
                    android:id="@+id/busi_go_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <ImageView
                    android:id="@+id/im_busi_logo"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/busi_go_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessTag"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家类型"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/business_tag_go"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <TextView
                    android:id="@+id/business_data_type"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/business_tag_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessLocation"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:id="@+id/tv_location_string"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家位置"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/business_address_go"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <TextView
                    android:gravity="right"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/business_data_location"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/business_address_go"
                    android:layout_toRightOf="@id/tv_location_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessLocationDetails"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:id="@+id/tv_location_details"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/business_details_address_go"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <TextView
                    android:gravity="right"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/business_data_location_details"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/business_details_address_go"
                    android:layout_toRightOf="@id/tv_location_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessPhone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/business_phone_go"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <TextView
                    android:id="@+id/business_data_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/business_phone_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessTime"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/business_time_go"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <TextView
                    android:id="@+id/business_data_time"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/business_time_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessRate"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佣金比例"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/business_rate_go"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
                <TextView
                    android:id="@+id/business_data_rate"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/business_rate_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>
            <RelativeLayout
                android:onClick="goBusinessDetail"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家详情"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_go"/>
            </RelativeLayout>
            <View
                style="@style/viewStyleMatch"/>

            <Button
                android:id="@+id/btn_commit"
                android:onClick="businessDataGo"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="提交"
                style="@style/btnNormal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
