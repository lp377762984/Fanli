<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_age_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.settings.child.personal_data_child.AgeChangeActivity">
    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        app:needComplete="true"
        app:textTitle="修改年龄"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@color/main_content_bg"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="年龄"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            app:hintSize="@dimen/main_text_14"
            android:textColorHint="@color/main_text_gary"
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            android:id="@+id/et_age"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:hint="请输入您的年龄"/>
    </LinearLayout>
</LinearLayout>
