<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascba.rebate.activities.scoring.FragmentKnowscroing"
    android:orientation="vertical"
    android:gravity="center_horizontal">



    <ImageView
        android:id="@+id/iv_know_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@mipmap/know_consumedevote"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_know_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户余额"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/tv_know_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="11sp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/gray_text"
        android:text="账户余额越多，评分越高，当账户余额达到10000元时分数增加5分，账户余额每增加20000元，分数加10分，赶快存钱吧"/>

</LinearLayout>
