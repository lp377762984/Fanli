<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/goods_attrs_title"
        android:textColor="@color/shop_normal_text_color"
        android:text="颜色分类"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ascba.rebate.view.RadioGroupEx
        android:layout_below="@id/goods_attrs_title"
        android:id="@+id/goods_attrs_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="12dp"
        android:layout_below="@id/goods_attrs_content"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line_new"/>
</RelativeLayout>