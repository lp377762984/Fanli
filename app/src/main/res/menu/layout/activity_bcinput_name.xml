<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bcinput_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.business_center_child.BCInputNameActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="商户中心"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            android:text="公司全称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:background="@null"
            android:id="@+id/company_name"
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            app:hintSize="@dimen/main_text_14"
            android:textColorHint="@color/main_text_gary"
            android:hint="举例：北京钱来钱往网络科技有限公司"
            android:layout_marginLeft="18dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:onClick="goNext"
        android:text="下一步"
        android:layout_marginTop="23dp"
        style="@style/btnNormal" />
</LinearLayout>
