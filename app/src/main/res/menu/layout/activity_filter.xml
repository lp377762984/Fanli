<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascba.rebate.activities.FilterActivity">
    <com.ascba.rebate.view.ShopABarText
        app:abar_title="筛选"
        android:id="@+id/sab"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <View
        android:id="@+id/sab_line"
        android:layout_below="@id/sab"
        android:background="@color/cutting_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/filter_btm"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:id="@+id/filter_reset"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="16sp"
            android:text="重置"
            android:layout_weight="371"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/filter_over"
            android:background="@color/moneyBarColor"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="完成"
            android:layout_weight="349"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_above="@id/filter_btm"
        android:background="@color/cutting_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_above="@id/line"
        android:layout_below="@id/sab_line"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
