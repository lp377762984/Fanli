<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="177dp"
    android:minHeight="177dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_rush_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="限量抢购"
            android:textColor="#dc0404"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_rush_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Miss Dior迪奥香水 国际大牌"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_rush_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shop_rush_bg_red"
            android:text="仅剩三件"
            android:textColor="#dc0404"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/tv_rush_img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/cutting_line"  />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tv_rush_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="天天特价"
                android:textColor="#FF921F"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rush_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rush_title2"
                android:layout_marginTop="5dp"
                android:text="每天都有大收获"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_rush_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rush_content2"
                android:layout_marginTop="5dp"
                android:background="@drawable/shop_rush_bg_orange"
                android:text="全场五折"
                android:textColor="#FF921F"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_rush_content2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_rush_img2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cutting_line"  />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tv_rush_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="品牌精选"
                android:textColor="#5EAEE5"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rush_content3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rush_title3"
                android:layout_marginTop="5dp"
                android:text="鞋服特卖 种类齐全"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_rush_desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rush_content3"
                android:layout_marginTop="5dp"
                android:background="@drawable/shop_rush_bg_blue"
                android:text="首发价99元"
                android:textColor="#5EAEE5"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_rush_content3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_rush_img3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>