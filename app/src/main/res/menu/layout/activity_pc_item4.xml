<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:minHeight="48dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_pc_item4_img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="11.5dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="11.5dp"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/pc_kefu" />


    <TextView
        android:id="@+id/activity_pc_item4_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/activity_pc_item4_img_left"
        android:text="在线客服"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/activity_pc_item4_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="13sp" />


</RelativeLayout>