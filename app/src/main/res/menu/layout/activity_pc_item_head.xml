<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/pc_beijing">
    <RelativeLayout
        android:id="@+id/activity_pc_item_head_message"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <com.ascba.rebate.view.MsgView
            android:id="@+id/shop_me_msg_view"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            app:msg_img="@mipmap/shop_no_msg"
            app:msg_indicator="false" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:background="@drawable/bg_circle" />

            <com.ascba.rebate.view.RoundImageView
                android:id="@+id/me_user_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:type="circle"
                android:scaleType="centerCrop" />
        </FrameLayout>


        <TextView
            android:id="@+id/activity_pc_item_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_pc_item_head_img_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pc_huiyuan"
                android:visibility="gone" />

            <TextView
                android:id="@+id/activity_pc_item_head_text_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.5dp"
                android:text="金钻会员"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>