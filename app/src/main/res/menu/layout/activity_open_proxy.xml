<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_open_proxy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_content_bg"
    tools:context="com.ascba.rebate.activities.me_page.user_update_child.OpenProxyActivity">
    <com.ascba.rebate.view.MoneyBar
        app:needComplete="true"
        android:id="@+id/mb_open_proxy"
        app:textTitle="开通代理"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/proxy_city_search"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:maxLines="1"
            android:layout_weight="3"
            android:textSize="15sp"
            android:background="@null"
            android:id="@+id/ed_proxy_area"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/check_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/ed_proxy_area"
            android:layout_weight="0.7"
            android:background="@color/main_red_normal"
            android:gravity="center"
            android:onClick="checkCity"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_14"/>
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:text="代理名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_15"
            android:id="@+id/proxy_proxy_name"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:text="代理权金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_15"
            android:id="@+id/proxy_money"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/view_line"
        android:layout_width="match_parent"
        android:layout_height="7dp"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_centerVertical="true"
            android:text="推荐人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_marginLeft="120dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:paddingLeft="7dp"
                android:button="@drawable/rb_proxy_bg"
                android:textColor="@color/textgray"
                android:id="@+id/rb_have"
                android:text="有"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:paddingLeft="7dp"
                android:button="@drawable/rb_proxy_bg"
                android:textColor="@color/textgray"
                android:id="@+id/rb_no"
                android:layout_marginLeft="30dp"
                android:text="无"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:id="@+id/no_view_01"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:text="推荐人姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_15"
            android:id="@+id/proxy_name"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/no_view_02"
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:id="@+id/no_view_03"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:text="推荐人号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_15"
            android:id="@+id/proxy_phone"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/no_view_04"
        style="@style/viewStyleMatch"/>

    <LinearLayout
        android:id="@+id/click_protocol"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <CheckBox
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:button="@drawable/proxy_agree_cb_bg"
            android:id="@+id/rb_agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/main_text_blue"
            android:textSize="@dimen/main_text_14"
            android:id="@+id/tv_proxy_name"
            android:onClick="goProxyProtocol"
            android:gravity="center"
            android:text="我同意《代理协议》"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/btm"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_space">
            <LinearLayout
                android:onClick="goPopPhone"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:text="客服"
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_weight="0.01"
                android:background="@color/view_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:visibility="gone"
                android:onClick="leaveMsg"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:text="留言"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:onClick="goOpenProxy"
                android:gravity="center"
                android:background="@color/main_red_normal"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_15"
                android:text="确认开通"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_above="@id/btm"
            style="@style/viewStyleMatch"/>
    </RelativeLayout>
</LinearLayout>
