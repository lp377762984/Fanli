<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/item_view_width"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="8dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="165dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_dropdownfootprint_img"
                android:layout_width="124.5dp"
                android:layout_height="159dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/item_dropdownfootprint_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_dropdownfootprint_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxEms="7"
                android:maxLines="2"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_dropdownfootprint_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_dropdownfootprint_desc"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/shop_red_text_color"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>