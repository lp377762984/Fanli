<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_phone_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.settings.child.safe_setting_child.PhoneChangeActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="修改手机号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="原手机号"/>
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_marginLeft="21dp"
            android:text="18311011381"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_centerVertical="true"
            android:id="@+id/phone_change_confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            app:hintSize="@dimen/main_text_14"
            android:textColorHint="@color/main_text_gary"
            android:background="@null"
            android:layout_marginLeft="21dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone_change_confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/phone_change_code_tv"
            android:layout_centerVertical="true"
            android:textColor="@color/main_red_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"/>
        <View
            android:background="@color/main_line_light_gray"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/phone_change_code_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View style="@style/viewStyleMatch"/>
    <Button
        android:onClick="goModifyPhone"
        android:textSize="@dimen/activity_text_title"
        android:text="下一步"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        style="@style/btnNormal" />
</LinearLayout>
