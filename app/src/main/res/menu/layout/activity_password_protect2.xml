<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_password_protect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.settings.child.safe_setting_child.PasswordProtectActivity">
    <com.ascba.rebate.view.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="修改密保问题"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/password_protect_tv_01"
            android:textSize="@dimen/activity_text_normal"
            android:text="问题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#80000000"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/activity_text_normal"
            android:layout_toRightOf="@id/password_protect_tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择您的密保问题"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/password_protect_tv_02"
            android:textSize="@dimen/activity_text_normal"
            android:text="答案"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.ascba.rebate.view.EditTextWithCustomHint
            app:hintSize="@dimen/activity_text_normal"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/activity_text_normal"
            android:layout_toRightOf="@id/password_protect_tv_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密保答案"/>
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <Button
        android:textSize="@dimen/activity_text_normal"
        android:text="提交"
        android:layout_marginTop="30dp"
        style="@style/btnNormal"/>
</LinearLayout>
