<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/moneyBarColor"
    android:id="@+id/search_bar_parent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="30dp"
        android:id="@+id/search_bar_back"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/money_bar_back"/>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/search_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <ImageView
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:src="@mipmap/search_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <com.ascba.rebate.view.MyAutoCompleteTextView
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/AutoCompleteStyle"
            android:dropDownWidth="match_parent"
            android:dropDownAnchor="@id/search_bar_parent"
            android:id="@+id/tv_search_bar"
            android:textSize="14sp"
            app:hintSize="14sp"
            android:layout_weight="5"
            android:hint="举例：北京市光彩路老家肉饼"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.02"
            android:background="@color/view_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_search_bar_search"
            android:textSize="15sp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@color/text_blue"
            android:text="搜索"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>