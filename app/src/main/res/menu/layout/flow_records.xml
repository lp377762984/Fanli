<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_content_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/flow_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/flow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:text="2017年04月12日"
                android:id="@+id/tv_flow_time"
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="收款："
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="￥ 236.00"
                    android:id="@+id/tv_flow_money"
                    android:textColor="@color/main_red_normal"
                    android:textSize="@dimen/main_text_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/view_line_new"/>
</LinearLayout>