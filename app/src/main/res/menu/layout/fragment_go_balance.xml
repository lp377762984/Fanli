<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12sp"
                android:text="金额"
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_14" />

            <com.ascba.rebate.view.EditTextWithCustomHint
                android:textSize="@dimen/main_text_14"
                android:textColor="@color/main_text_normal"
                app:hintSize="@dimen/main_text_14"
                android:textColorHint="@color/main_text_gary"
                android:id="@+id/go_balance_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:hint="最多转出佣金1334.5元" />
        </LinearLayout>

        <include layout="@layout/goods_details_cuttingline" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="13.5dp"
            android:layout_marginRight="13.5dp"
            android:layout_marginTop="27.5dp"
            android:gravity="center"
            android:text="确认转出"
            android:background="@drawable/gray_bg3"
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_15" />

        <TextView
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="17dp"
            android:text="提示：转出至余额的资金，若提现至银行卡将收取13%服务费" />
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>