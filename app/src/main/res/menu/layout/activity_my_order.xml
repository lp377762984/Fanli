<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ascba.rebate.view.ShopABar
        android:id="@+id/activity_order_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:abar_title="我的订单"/>


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slidingtablayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        app:tl_indicator_color="#DD0E0E"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="4dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#DD0E0E"
        app:tl_textUnselectColor="@color/shop_normal_text_color"
        app:tl_textsize="15sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_order_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>