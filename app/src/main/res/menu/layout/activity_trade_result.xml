<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trade_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/main_content_bg"
    tools:context="com.ascba.rebate.activities.main_page.sweep.TradeResultActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="交易结果"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:scaleType="center"
        android:src="@mipmap/pay_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="交易成功"
        android:textColor="@color/main_red_normal"
        android:textSize="@dimen/main_text_17" />

    <TextView
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="¥ 0.00"
        android:textSize="36sp" />
    <View
        android:visibility="gone"
        style="@style/viewStyleMargin"/>
    <RelativeLayout
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="收款人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="老家肉饼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:visibility="gone"
        style="@style/viewStyleMargin"/>

    <Button
        android:id="@+id/button"
        style="@style/btnNormal"
        android:layout_marginTop="30dp"
        android:onClick="goComplete"
        android:text="完成" />
</LinearLayout>
