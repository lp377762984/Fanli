<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_details_evaluate_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/goods_details_evaluate_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="宝贝评价"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/goods_details_evaluate_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/goods_details_evaluate_text1"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/goods_details_evaluate_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/right_arrow" />


    <TextView
        android:id="@+id/goods_details_evaluate_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@id/goods_details_evaluate_img"
        android:textColor="@color/shop_red_text_color"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/activity_cd_item8_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/goods_details_evaluate_text3"
        android:text="好评率："
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />
</RelativeLayout>