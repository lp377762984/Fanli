<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.main_page.sweep.PayActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="扫一扫支付"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal">
        <com.ascba.rebate.view.RoundImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:type="circle"/>
        <LinearLayout
            android:onClick="clickSelectPayType"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="向钱来钱往支付"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_pay_type"
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式：记账"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/pay_type"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额(元)"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            app:hintSize="@dimen/main_text_14"
            android:textColorHint="@color/main_text_gary"
            android:id="@+id/sweep_money"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="免手续费"/>
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <Button
        android:onClick="goPayPassword"
        android:layout_marginTop="28dp"
        android:text="支付"
        style="@style/btnNormal" />
</LinearLayout>
