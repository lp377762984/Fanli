<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="203dp">
    <ImageView
        android:id="@+id/shop_im_goods_style2"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/shop_tv_goods_title_style2"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:textColor="@color/shop_normal_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:maxLines="1"
        android:id="@+id/shop_tv_goods_price_style2"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="#fc5e5e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:maxLines="1"
        android:id="@+id/shop_tv_goods_price_old_style2"
        android:layout_marginTop="7dp"
        android:textSize="11sp"
        android:textColor="#b9b9b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>