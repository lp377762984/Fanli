<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recha_succ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.recharge_child.RechaSuccActivity">
    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        app:needComplete="true"
        app:textTail="完成"
        app:textTitle="提现"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@color/main_content_bg"
        android:paddingBottom="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@mipmap/pay_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="12.5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/main_text_17"
            android:textColor="@color/main_red_normal"
            android:text="提现成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/main_text_14"
            android:textColor="@color/main_text_gary"
            android:text="遇到提现高峰期，到账可能存在延迟，若48小时后未到账，请拨打客服电话。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:background="@color/main_content_bg"
        android:onClick="goAcc"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="59dp">
        <ImageView
            android:id="@+id/pay_img"
            android:layout_centerVertical="true"
            android:src="@mipmap/pay_success_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/pay_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/main_text_15"
                android:textColor="@color/main_red_normal"
                android:text="查看账单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/main_text_14"
                android:textColor="@color/main_text_gary"
                android:layout_marginTop="6dp"
                android:text="提现金额随时查询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textColor="@color/main_red_normal"
            android:textSize="@dimen/main_text_14"
            android:background="@drawable/recharge_success_check_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
</LinearLayout>
