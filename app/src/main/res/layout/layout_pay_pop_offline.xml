<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingLeft="14dp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/close"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/pay_close" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择支付方式"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="17sp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moneyBarColor"
                android:textSize="17sp" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@id/title"
        android:background="@color/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/pay_type_strs"
        android:layout_below="@id/line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:textSize="13sp"
        android:text="选择支付方式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:visibility="gone"
        android:id="@+id/go_pay"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/register_btn_bg"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="确定"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/btm"
        android:gravity="center"
        android:layout_above="@id/go_pay"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/shop_normal_text_color"
            android:text="支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dlg_tv_total_cash"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/moneyBarColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:paddingBottom="40dp"
        android:id="@+id/pay_type_list"
        android:layout_below="@id/pay_type_strs"
        android:layout_above="@id/btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>