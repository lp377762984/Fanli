<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_news_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_news" />

    <TextView
        android:paddingTop="5dp"
        android:id="@+id/item_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_news_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_news_title"
        android:layout_below="@id/item_news_title"
        android:paddingTop="5dp"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_news_time"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cutting_line" />
</RelativeLayout>