<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_content_bg"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:minHeight="106dp">

    <ImageView
        android:layout_gravity="right"
        android:id="@+id/im_ticket_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/ticket_front_bg_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:lineSpacingExtra="1.8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxEms="1"
                android:text="无门槛使用"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_12" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ticket_bg_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ticket_money_symbol_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:id="@+id/ticket_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@id/ticket_money_symbol_id"
                    android:ellipsize="end"
                    android:maxLength="4"
                    android:textSize="35sp" />

                <TextView
                    android:lineSpacingExtra="1.8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:text="钱来钱往\n消费金融增值大系统商城"
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="29dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/ticket_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="8dp"
                android:textSize="11sp" />

        </FrameLayout>
    </LinearLayout>
</FrameLayout>