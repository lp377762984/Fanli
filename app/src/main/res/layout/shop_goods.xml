<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="234dp"
    android:background="@color/lighter_gray"
    android:minHeight="234dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_weight="7"
            android:layout_height="0dp"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/goods_list_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />
            <TextView
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="用券立减"
                android:background="@drawable/ticket_reduce"
                android:layout_gravity="right"
                android:id="@+id/tv_use_ticket_reduce"
                android:layout_width="35dp"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_teihui"
                android:background="@drawable/red_bg"
                android:textSize="@dimen/main_text_11"
                android:textColor="@color/shop_red_text_color"
                android:text="特惠"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="5dp"
                android:id="@+id/goods_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:lines="2"
                android:paddingTop="5dp"
                android:textSize="12sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:paddingLeft="14dp">

            <TextView
                android:id="@+id/goods_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@android:color/holo_red_light"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/goods_list_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:src="@mipmap/icon_add_cart" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>