<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/moneyBar"
        app:textTitle="商品分分兑换"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:background="@color/main_content_bg"
        android:id="@+id/tv_tips_head"
        android:textColor="@color/main_text_normal"
        android:textSize="@dimen/main_text_15"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_bg"/>
    <LinearLayout
        android:background="@color/main_content_bg"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="当前总商品分为："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total_red_score_total"
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_bg"/>
    <LinearLayout
        android:background="@color/main_content_bg"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="您的兑换商品分为："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total_red_score"
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/main_bg"/>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:id="@+id/red_rate"
            android:layout_centerVertical="true"
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_14"

            android:text="当前兑换比例 1:1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:textColor="@color/main_text_blue"
            android:textSize="@dimen/main_text_14"
            android:onClick="goAcc"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="历史兑换记录"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <LinearLayout
        android:background="@color/main_content_bg"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">
        <!--1-->
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="返代金券"
                android:id="@+id/tv_cash_desc"
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/red_money_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_23"
                    android:id="@+id/tv_cash"
                    android:layout_marginLeft="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <!--2-->
        <View
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="0.01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/main_line_light_gray"/>
        <!--3-->
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_14"
                android:text="返折扣券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/red_ticket_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_ticket"
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_23"
                    android:layout_marginLeft="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>

    <TextView
        android:background="@color/main_content_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/tv_tips"
        android:textColor="@color/main_text_normal"
        android:textSize="@dimen/main_text_14"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="52dp" />
    <Button
        android:id="@+id/btn_exchange"
        android:onClick="redChange"
        android:layout_marginTop="23dp"
        android:text="兑换"
        style="@style/btnNormal" />
</LinearLayout>