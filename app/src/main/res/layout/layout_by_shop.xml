<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="485dp">

            <LinearLayout
                android:id="@+id/btn_buy_input_message"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F49898"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_purchase_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e52020"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125.5dp"
                android:paddingLeft="10dp"
                android:minHeight="98dp">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="center"
                    android:src="@mipmap/close" />

                <TextView
                    android:id="@+id/tv_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#f00"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shop_price"
                    android:layout_marginTop="6dp"
                    android:maxLines="1"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_listener"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_inventory"
                    android:layout_marginRight="15.5dp"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:maxLines="2" />
            </RelativeLayout>

            <View
                android:id="@+id/cutting_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/content"
                android:background="@color/view_line_new" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/goods_profile_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btn_buy_input_message"
                android:layout_below="@id/cutting_line"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp" />

        </RelativeLayout>

        <com.ascba.rebate.view.RoundImageView
            app:borderRadius="5dp"
            android:id="@+id/iv_shop_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/busi_loading"
            app:type="round" />
    </RelativeLayout>
</LinearLayout>