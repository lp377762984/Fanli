<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_search_rr"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/head_ll_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="18dp"
        android:src="@mipmap/abar_back" />

    <LinearLayout
        android:id="@+id/head_rr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.ascba.rebate.view.MsgView
            android:id="@+id/head_img_xiaoxi"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="消息"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="8sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/head_rr"
        android:layout_toRightOf="@id/head_ll_back"
        android:background="@drawable/shop_action_bar"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/head_img_sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/shop_search" />

        <TextView

            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/head_img_sousuo"
            android:background="@null"
            android:hint="请输入要搜索的商品名称"
            android:textColorHint="@color/gray"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:id="@+id/homepage_head_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:alpha="0"
        android:visibility="gone"
        android:background="@color/cutting_line" />
</RelativeLayout>