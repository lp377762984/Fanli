<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tabs_zero_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_tabs_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_main_select" />

            <TextView
                android:id="@+id/tv_tabs_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="首页"
                android:textColor="@color/moneyBarColor"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabs_one_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_tabs_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fenlei" />

            <TextView
                android:id="@+id/tv_tabs_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="竞拍"
                android:textColor="@color/textgray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabs_three_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/im_tabs_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/tab_shop" />

                <TextView
                    android:id="@+id/im_tabs_three_noty"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginTop="-3dp"
                    android:layout_toRightOf="@id/im_tabs_three"
                    android:background="@drawable/notify_text"
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="10dp"
                    android:text="0"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_tabs_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im_tabs_three"
                    android:layout_marginTop="5dp"
                    android:text="购物车"
                    android:textColor="@color/textgray"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabs_four_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_tabs_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_me" />

            <TextView
                android:id="@+id/tv_tabs_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我"
                android:textColor="@color/textgray"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/viewStyleMatch"
        android:layout_marginBottom="48dp" />
</RelativeLayout>