<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register_input_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascba.rebate.activities.register.RegisterInputNumberActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:onClick="goBack"
            android:paddingLeft="15dp"
            android:paddingRight="55dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/abar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:textColor="@color/main_text_normal"
        android:textSize="@dimen/main_text_16"
        android:layout_centerHorizontal="true"
        android:id="@+id/register_input_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入您的手机号"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="13dp"
        android:layout_below="@id/register_input_number_text"
        android:id="@+id/register_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:id="@+id/register_country_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家/地区"/>
        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_15"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/register_country_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>

    </RelativeLayout>
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/register_location"
        android:id="@+id/register_line_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_line_light_gray"/>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/register_phone_number01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/register_line_01">
        <TextView

            android:layout_gravity="center_vertical"
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"/>
        <View
            android:layout_marginLeft="52dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_line_light_gray"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:maxLength="11"
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            app:hintSize="@dimen/main_text_14"
            android:textColorHint="@color/main_text_gary"
            android:id="@+id/loss_phone_number_ed"
            android:padding="15dp"
            android:hint="请填写您的手机号码"
            android:background="@null"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/register_line_02"
        android:layout_below="@id/register_phone_number01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_line_light_gray"/>
    <Button
        android:onClick="goCodePassword"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/register_btn_bg"
        android:text="找回密码"
        android:layout_below="@id/register_line_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
