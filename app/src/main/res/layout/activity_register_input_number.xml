<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register_input_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascba.rebate.activities.register.RegisterInputNumberActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:onClick="goBack"
            android:paddingLeft="15dp"
            android:paddingRight="55dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/money_bar_back_blank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:textColor="@color/main_text_normal"
        android:textSize="@dimen/main_text_17"
        android:layout_centerHorizontal="true"
        android:id="@+id/register_input_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入您的手机号"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="13dp"
        android:layout_below="@id/register_input_number_text"
        android:id="@+id/register_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_15"
            android:id="@+id/register_country_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家/地区"/>
        <TextView
            android:textColor="@color/transText"
            android:textSize="15sp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/register_country_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting_go"/>

    </RelativeLayout>
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/register_location"
        android:id="@+id/register_line_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>



    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/register_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/register_line_01">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="15sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"/>
        <View
            android:layout_marginLeft="52dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view_line"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:maxLength="11"
            android:textSize="@dimen/main_text_15"
            android:textColor="@color/main_text_normal"
            app:hintSize="@dimen/main_text_14"
            android:textColorHint="@color/main_text_gary"
            android:id="@+id/ed_input_number"
            android:maxLines="1"
            android:padding="15dp"
            android:hint="请填写您的手机号码"
            android:background="@null"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/register_line_03"
        android:layout_below="@id/register_phone_number"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>
    <Button
        android:id="@+id/btn_register"
        android:onClick="goRegisterCode"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_15"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/register_btn_bg"
        android:text="注册"
        android:layout_below="@id/register_line_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/register_img_bg"
        android:layout_below="@id/btn_register"
        android:src="@mipmap/register_img_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:onClick="goServerProtocol"
        android:textColor="@color/main_text_blue"
        android:textSize="@dimen/main_text_12"
        android:id="@+id/register_agree_text"
        android:layout_marginBottom="21dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《钱来钱往软件许可及服务协议》"/>
    <TextView
        android:layout_marginTop="3dp"
        android:textColor="@color/main_text_gary"
        android:textSize="@dimen/main_text_12"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/register_agree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轻触上面的注册按钮，即表示你同意"/>
</RelativeLayout>
