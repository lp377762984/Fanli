<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ascba.rebate.activities.auction.AuctionConfirmOrderActivity">
    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        app:textTitle="确认订单"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--头部-->
    <LinearLayout
        android:layout_below="@id/mb"
        android:visibility="gone"
        android:id="@+id/auction_order_head"
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_height="40dp"
        android:background="#fdf9dc"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/proxy_msg"
            android:gravity="center_vertical"
            android:text="提示"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_13" />

        <com.ascba.rebate.view.MarqueeTextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_13" />

    </LinearLayout>
    <!--底部-->
    <RelativeLayout
        android:id="@+id/confirm_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <include layout="@layout/goods_details_cuttingline" />

        <TextView
            android:id="@+id/confir_order_btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:paddingLeft="25.5dp"
            android:paddingRight="25.5dp"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confir_order_text_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/confir_order_btn_commit"
            android:textColor="@color/shop_red_text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/confir_order_text_total_price"
            android:text="实付款："
            android:textColor="@color/shop_normal_text_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/auction_order_head"
        android:layout_above="@id/confirm_order_bottom"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
