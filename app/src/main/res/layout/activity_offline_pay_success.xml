<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ascba.rebate.activities.offline_business.OfflinePaySuccessActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="付款成功"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ascba.rebate.view.RoundImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/im_user_icon"
                android:layout_width="34dp"
                android:layout_height="34dp" />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_user_cost"
            android:layout_marginTop="21dp"
            android:textColor="@color/main_text_normal"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="交易成功"
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_14"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title1"
                android:layout_centerVertical="true"
                android:text="付款方式"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_pay_type"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title2"
                android:layout_centerVertical="true"
                android:text="对方账户"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_account"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title3"
                android:layout_centerVertical="true"
                android:text="增值积分"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_score"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_red_normal"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title4"
                android:layout_centerVertical="true"
                android:text="交易时间"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title5"
                android:layout_centerVertical="true"
                android:text="订单号"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:maxLines="1"
                android:id="@+id/tv_trade_number"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="28dp"
        android:text="完成"
        style="@style/btnNormal" />
</LinearLayout>
