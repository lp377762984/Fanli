<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_msg_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/shop_no_msg" />

    <ImageView
        android:id="@+id/view_msg_indicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignRight="@id/view_msg_im"
        android:layout_alignTop="@id/view_msg_im"
        android:background="@drawable/notify_img" />
</RelativeLayout>