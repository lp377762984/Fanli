<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:background="@mipmap/me_head_bg"
        android:orientation="vertical">

        <com.ascba.rebate.view.MoneyBar
            android:id="@+id/mb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:needLine="false"
            app:backImg="@mipmap/money_bar_back"
            app:barBg="#f64545"
            app:titleColor="#fff"
            app:textTitle="我的奖励" />

        <RadioGroup
            android:id="@+id/rec_rg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#f64545"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                    android:textSize="@dimen/main_text_14"
                    android:id="@+id/rec_gb_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="\?比奖励\n一级推广"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/rec_gb_img_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="6dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_rec_white" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/mr_rec_line" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                    android:textSize="@dimen/main_text_14"
                    android:id="@+id/rec_gb_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="\?比奖励\n二级推广"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/rec_gb_img_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="6dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_rec_white"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rec_rg"
            android:layout_below="@id/mb"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rec_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_23" />

            <TextView
                android:id="@+id/money_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="历史推广累计佣金(元)"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_17" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>