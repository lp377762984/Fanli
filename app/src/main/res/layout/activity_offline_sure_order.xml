<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.offline_business.OfflinePaySureOrderActivity">

    <com.ascba.rebate.view.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="订单确定" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_content_bg"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ascba.rebate.view.RoundImageView
                android:id="@+id/im_user_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@mipmap/new_man" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="个人昵称"
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:text="+55.50元"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="交易成功"
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="付款方式"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/title1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="账户余额"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="对方账户"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/title2"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="178***34237"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="增值积分"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/title3"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="1000"
                android:textColor="@color/main_red_normal"
                android:textSize="@dimen/main_text_13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="支付佣金"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />

            <TextView
                android:id="@+id/tv_score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/title4"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="￥16.00"
                android:textColor="@color/main_red_normal"
                android:textSize="@dimen/main_text_13" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="交易时间"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/title5"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="2017-04-01 15:13"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">

            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单号"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />

            <TextView
                android:id="@+id/tv_trade_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/title6"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="12324590438509"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sure_order_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/sure_order_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <!---->
    <!--<Button-->
    <!--android:layout_marginTop="28dp"-->
    <!--android:text="完成"-->
    <!--style="@style/btnNormal" />-->
</LinearLayout>
