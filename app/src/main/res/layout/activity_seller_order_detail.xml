<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_seller_order_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.offline_business.SellerOrderDetailActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="订单详情"
        android:id="@+id/seller_detail_mb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <com.ascba.rebate.view.RoundImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/seller_order_icon"
                android:layout_width="34dp"
                android:layout_height="34dp" />
            <TextView
                android:gravity="center"
                android:id="@+id/seller_order_name"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/seller_order_cost"
            android:layout_marginTop="18dp"
            android:textColor="@color/main_text_normal"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/seller_order_status"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_14"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title1"
                android:layout_centerVertical="true"
                android:text="付款方式"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seller_order_paytype"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_line_space">

            <TextView
                android:id="@+id/seller_order_acount"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/title2"
                android:text="对方账户"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title3"
                android:layout_centerVertical="true"
                android:text="增值礼品分"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seller_order_score"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_red_normal"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/seller_order_detail_employpay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title7"
                android:layout_centerVertical="true"
                android:text="支付佣金"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seller_order_employee"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title7"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_red_normal"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title4"
                android:layout_centerVertical="true"
                android:text="交易时间"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seller_order_time"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:layout_toRightOf="@id/title4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title5"
                android:layout_centerVertical="true"
                android:text="订单号"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:maxLines="1"
                android:id="@+id/seller_order_trade_number"
                android:ellipsize="end"
                android:gravity="right"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/title5"
                android:layout_alignBottom="@+id/title5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/seller_order_detail_contactway"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/main_line_space">
            <TextView
                android:id="@+id/title6"
                android:layout_centerVertical="true"
                android:text="商家联系方式:"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:maxLines="1"
                android:id="@+id/seller_order_contactway"
                android:ellipsize="end"
                android:gravity="right"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/title6"
               android:layout_toRightOf="@+id/title6"
               />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sure_order_vis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:background="@color/main_red_normal"
            android:orientation="horizontal">

            <TextView
                android:clickable="true"
                android:id="@+id/seller_order_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:clickable="true"
                android:id="@+id/seller_order_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
