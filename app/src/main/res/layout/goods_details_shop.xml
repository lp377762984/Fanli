<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="14dp">

    <RelativeLayout
        android:id="@+id/goods_details_shop_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="14dp">

        <LinearLayout
            android:id="@+id/goods_details_shop_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goods_details_shop_img_logo"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/goods_details_shop_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/goods_details_shop_img_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_bg"
                android:padding="3dp"
                android:text="进店逛逛"
                android:textColor="@color/shop_red_text_color"
                android:textSize="13sp" />
        </FrameLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/goods_details_shop_l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_details_shop_rl1"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_details_shop_text_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shop_red_text_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="全部宝贝"
                android:textColor="@color/shop_normal_text_color"
                android:layout_marginBottom="2dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_details_shop_img_recomm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shop_red_text_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="达人推荐"
                android:layout_marginBottom="2dp"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述相符"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_desc_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.5dp"
                    android:background="@drawable/red_bg"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="高"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务态度"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_service_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.5dp"
                    android:background="@drawable/red_bg"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="高"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发货速度"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_speed_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.5dp"
                    android:background="@drawable/red_bg"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="高"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_details_shop_l2"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_details_shop_img1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_details_shop_img1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥499"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/goods_details_shop_img1_price_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:text="￥799.9"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_details_shop_img2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_details_shop_img2_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥499"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/goods_details_shop_img2_price_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:text="￥799.9"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_details_shop_img3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_details_shop_img3_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥499"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/goods_details_shop_img3_price_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:text="￥799.9"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>