<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_details_appreciation_rl"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/goods_details_appreciation_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/red_bg"
        android:text="奖励"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textColor="@color/shop_red_text_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/goods_details_appreciation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/goods_details_appreciation_text1"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/right_arrow" />

</RelativeLayout>